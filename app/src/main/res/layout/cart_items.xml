<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgchart"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tittlechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgchart"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Kingstone FURY Impact Sei Andal"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hargaChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tittlechart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imgchart"
            android:drawablePadding="2dp"
            android:text="Rp729.000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hargaChart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/imgchart"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/chartDelete"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:src="@drawable/ic_round_delete_24" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Beli"
                android:textAllCaps="false"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
